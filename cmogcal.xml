<?xml version="1.0" encoding="utf-8"?>
<extension type="component" version="2.5.0" method="upgrade">
 
        <name>COM_CMOGCAL</name>
        <!-- The following elements are optional and free of formatting constraints -->
        <creationDate>June 2013</creationDate>
        <author>Andy Romanofsky</author>
        <authorEmail>andyromanofsky@gmail.com</authorEmail>
        <authorUrl>http://churchmotherofgod.org</authorUrl>
        <copyright>Copyright 2013 - Andy Romanofsky and Orthodox Church of the Mother of God, Mays Landing, NJ</copyright>
        <license>License Info</license>
        <!--  The version string is recorded in the components table -->
        <version>0.2.48</version>
        <!-- The description is optional and defaults to the name -->
        <description>COM_CMOGCAL_DESCRIPTION</description>
 
        <!-- Runs on install/uninstall/update; New in 2.5 -->
        <scriptfile>script.php</scriptfile>
 
        <install> <!-- Runs on install -->
                <sql>
                        <file driver="mysql" charset="utf8">sql/install.mysql.utf8.sql</file>
                </sql>
        </install>
        <uninstall> <!-- Runs on uninstall -->
                <sql>
                        <file driver="mysql" charset="utf8">sql/uninstall.mysql.utf8.sql</file>
                </sql>
        </uninstall>
 
        <update> <!-- Runs on update; New in 2.5 -->
                <schemas>
                        <schemapath type="mysql">sql/updates/mysql</schemapath>
                </schemas>
        </update>
 
        <!-- Site Main File Copy Section -->
        <!-- Note the folder attribute: This attribute describes the folder
                to copy FROM in the package to install therefore files copied
                in this section are copied from /site/ in the package -->
        <files folder="site">
                <filename>index.html</filename>
                <filename>cmogcal.php</filename>
                <filename>controller.php</filename>
                <folder>views</folder>
                <folder>models</folder>
                <folder>language</folder>
				<folder>helpers</folder>
				<folder>controllers</folder>
				<folder>tables</folder>
        </files>
 
        <media destination="com_cmogcal" folder="media">
                <filename>index.html</filename>
                <folder>images</folder>
        </media>
 
        <administration>
                <!-- Administration Menu Section -->

    <menu link="option=com_cmogcal" view="calendars" img="js/ThemeOffice/component.png">COM_CMOGCAL</menu>
    <submenu>
          <menu link="option=com_cmogcal" view="calendars">COM_CMOGCAL_SUBMENU_CALENDARS</menu>
          <menu view="events">COM_CMOGCAL_SUBMENU_EVENTS</menu>
	      <menu view="moveableevents">COM_CMOGCAL_SUBMENU_MOVEABLEEVENTS</menu>
	      <menu view="triodionweeks" >COM_CMOGCAL_SUBMENU_TRIODIONS</menu>
	      <menu view="pentecostweeks" >COM_CMOGCAL_SUBMENU_PENTECOSTS</menu>
	      <menu view="paschaweeks" >COM_CMOGCAL_SUBMENU_PASCHAS</menu>
	      <menu view="lukeweeks" >COM_CMOGCAL_SUBMENU_LUKES</menu>
    </submenu>
                <!-- Administration Main File Copy Section -->
                <!-- Note the folder attribute: This attribute describes the folder
                        to copy FROM in the package to install therefore files copied
                        in this section are copied from /admin/ in the package -->
                <files folder="admin">
                        <!-- Admin Main File Copy Section -->
                        <filename>index.html</filename>
                        <filename>config.xml</filename>
                        <filename>cmogcal.php</filename>
                        <filename>controller.php</filename>
                        <filename>access.xml</filename>
                        <!-- SQL files section -->
                        <folder>sql</folder>
                        <!-- tables files section -->
                        <folder>tables</folder>
                        <!-- models files section -->
                        <folder>models</folder>
                        <!-- views files section -->
                        <folder>views</folder>
                        <!-- controllers files section -->
                        <folder>controllers</folder>
                        <!-- helpers files section -->
                        <folder>helpers</folder>
                </files>
                <languages folder="admin">
                        <language tag="en-GB">language/en-GB/en-GB.com_cmogcal.ini</language>
                        <language tag="en-GB">language/en-GB/en-GB.com_cmogcal.sys.ini</language>
                </languages>
        </administration>
 
</extension>